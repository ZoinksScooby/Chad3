#method called "is_dumb"

friend = "james"

#in one line return the sentence "james is dumb" and all caps

class String
  def is_dumb
    self + " is dumb"
  end
end

class String
  def ame_minus
    self.gsub "ame", ""
  end
end

puts "james".is_dumb.ame_minus.upcase

