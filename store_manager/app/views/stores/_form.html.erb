<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <h2>Products</h2>

  <% @store.products.each do %>  
  <%= f.fields_for :products do |product| %>
    <div class="field">
      <%= product.label :name %><br />
      <%= product.text_field :name %>
  </div>

  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
